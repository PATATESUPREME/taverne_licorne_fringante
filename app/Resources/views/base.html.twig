<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('resources/css/bootstrap.min.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <style>
            header, article, aside {
                margin-bottom: 1rem;
            }
        </style>
    </head>
    <body>
        <header>
            <h1>{% block header %}Welcome!{% endblock %}</h1>
        </header>
        <section>
            <aside>
                {% block sidebar %}
                    <ul>
                        <li><a href="{{ path('admin_user_index') }}">Home user</a></li>
                    </ul>
                {% endblock %}
            </aside>
            <article>
                {% block content %}Content{% endblock %}
            </article>
        </section>
        <footer>
            {% block footer %}Footer{% endblock %}
        </footer>

        {% block javascripts %}
            <script src="{{ asset('resources/js/jquery.js') }}"></script>
        {% endblock %}
    </body>
</html>
