{% extends 'base.html.twig' %}

{% block header %}
    <h1>{{ 'security_login_title'|trans({}, 'security') }}</h1>
{% endblock %}

{% block body %}
    <div class="col-lg-4 col-md-4 text-center mx-auto">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username">{{ 'security_username'|trans({}, 'security') }}</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>

            <div class="form-group">
                <label for="password">{{ 'security_password'|trans({}, 'security') }}</label>
                <input class="form-control" type="password" id="password" name="_password" />
            </div>

            <button class="form-control" type="submit">{{ 'security_login'|trans({}, 'security') }}</button>
        </form>
    </div>
{% endblock %}
