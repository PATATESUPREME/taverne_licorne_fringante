{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'booking_show_title'|trans({}, 'booking') }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'booking_id'|trans({}, 'booking') }}</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>{{ 'booking_day'|trans({}, 'booking') }}</th>
                <td>{% if booking.day %}{{ booking.day|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'booking_hour'|trans({}, 'booking') }}</th>
                <td>{% if booking.hour %}{{ booking.hour|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'booking_people'|trans({}, 'booking') }}</th>
                <td>{{ booking.peopleBooked }}</td>
            </tr>
            <tr>
                <th>{{ 'booking_email'|trans({}, 'booking') }}</th>
                <td>{{ booking.email }}</td>
            </tr>
            <tr>
                <th>{{ 'booking_name'|trans({}, 'booking') }}</th>
                <td>{{ booking.name }}</td>
            </tr>
            <tr>
                <th>{{ 'booking_phone'|trans({}, 'booking') }}</th>
                <td>{{ booking.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('booking_index') }}">{{ 'return_button'|trans({}, 'general') }}</a>
    <a class="btn btn-info" href="{{ path('booking_edit', { 'id': booking.id }) }}">{{ 'edit_button'|trans({}, 'general') }}</a>
    {{ form_start(delete_form) }}
        <input type="submit" class="btn btn-danger" value="{{ 'delete_button'|trans({}, 'general') }}">
    {{ form_end(delete_form) }}
{% endblock %}
